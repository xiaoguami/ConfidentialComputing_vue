@import './index';

* {
    box-sizing: border-box;
}
html, body {
    width: 100%;
    height: 100%;
    min-width: 1024px;
    min-height: 100%;
    background: #f4f5f6;
}
body {
    font-family: Helvetica Neue, Helvetica, PingFang SC, Hiragino Sans GB, Microsoft YaHei, SimSun, sans-serif;
    font-weight: 400;
    font-size: 14px;
    color: #333;
    overflow-x: hidden;
    overflow-y: auto;
}
a {
    color: $appColor;
    text-decoration: none;
    outline: none;
}
// hover
.ishover {
    transition: background 0.3s;
    &:hover {
        background: rgba(0, 0, 0, 0.025);
    }
}
// 过滤容器
.filter-container {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    .left {
        display: flex;
        align-items: center;
    }
    .right {
        display: flex;
        align-items: center;
        margin-left: auto;
    }
    .filter-item {
        margin-right: 5px;
    }
}
// 分页容器
.pagination-container {
    display: flex;
    background: #fff;
    padding: 10px 15px;
    margin-top: 20px;
}
